module counter_updown(clk, load_en, updown, count);
input clk;
input load_en;
input updown; 
output reg [3:0]count;


always@(posedge clk)
begin
    if(updown)
    begin
        if(load_en)
            begin
            count <= 4'd1;   
            end
        else
            begin
            count <= count + 4'd2;
            end 
    end
    else
    begin
        if(load_en)
            begin
            count <= 4'd14;   
            end
        else
            begin
            count <= count - 4'd2;
            end 
    end
end
endmodule

